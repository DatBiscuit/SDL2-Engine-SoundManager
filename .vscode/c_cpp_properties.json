{
    "configurations": [
        {
            "name": "MinGW",
            "intelliSenseMode": "gcc-x64",
            "compilerPath": "C:/MinGW/x86/bin/g++.exe",
            "includePath": [
                "${workspaceFolder}/headers",
                "${workspaceFolder}/include/SDL2/",
                "${workspaceFolder}/include/SDL2_image/",
                "${workspaceFolder}/include/SDL2_ttf/"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}/headers",
                    "${workspaceFolder}/include"
                ]
            },
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "cStandard": "c11",
            "cppStandard": "c++17"
        }
    ],
    "version": 4
}